		//TP Conversion Celsius en Fahrenheit
		int celsius = 0, fahrenheit = 0, choix = 1;
		char rpse = 'O';
		
		while(celsius == 0 && fahrenheit == 0 && rpse == 'O') {
			System.out.println("Choisir un mode de conversion");
			System.out.println("1- Convertisseur Celsius - Fahrenheit");
			System.out.println("2- Convertisseur Fahrenheit - Celsius");
			choix = sc.nextInt();
			switch(choix) {
				case 1:
					System.out.println("Température à convertir : ");
					celsius = sc.nextInt();
					fahrenheit = (9/5 * celsius) + 32;
					System.out.println(celsius + " °C correspond à " + fahrenheit + " °F");
					break;
				case 2:
					System.out.println("Température à convertir : ");
					fahrenheit = sc.nextInt();
					celsius = (fahrenheit - 32)*5/9;
					System.out.println(fahrenheit + " °F correspond à " + celsius + " °C");
					break;
				default:
					System.out.println("Impossible de convertir");
			}
			
			rpse = ' ';
			while(rpse != 'O' && rpse != 'N') {
				System.out.println("Souhaitez-vous convertir une autre température ? (O/N)");
				rpse = sc.nextLine().charAt(0);
			}
		}
		
		System.out.println("Fin conversion");
			
	}
