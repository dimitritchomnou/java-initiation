	public static double arrondi(double A, int B) {
		return (double)((int)(A * Math.pow(10, B) + .5) / Math.pow(10, B));
	}
	
	public static void tableContent(String tab[]) {
		int k = 0;
		for(String elt : tab) {
			System.out.println("chaine["+k+"] = " + elt);
			k++;
		}
	}
}
